<div class="backdrop">
</div>
<header class="main-header">
    <button id="side-menu-toggle">Menu</button>
    <nav class="main-header__nav">
        <ul class="main-header__item-list">
            <li class="main-header__item">
                <a class="<%= path === '/' ? 'active' : '' %>" href="/">Shop</a>
            </li>
            <li class="main-header__item">
                <a class="<%= path === '/products' ? 'active' : '' %>" href="/products">Products</a>
            </li>
            <% if (isAuthenticated) { %>
                <li class="main-header__item">
                    <a class="<%= path === '/cart' ? 'active' : '' %>" href="/cart"><i class="fa fa-shopping-cart"></i> Cart</a>
                </li>
                <li class="main-header__item">
                    <a class="<%= path === '/orders' ? 'active' : '' %>" href="/orders">Orders</a>
                </li>
                <%if(isAdmin){%>
                    <li class="main-header__item">
                        <div class="dropdown" class="main-header__item">
                            <button class="dropbtn">Admin <i class="fas fa-sort-down"></i></button>
                            <div class="dropdown-content">
                                <a class="<%= path === '/admin/products' ? 'active' : '' %>" href="/admin/products">Products
                                    </a>
                                <%if(req.adminId.toString()===req.userId.toString()){%>
                                    <a class="<%= path === '/admin/users' ? 'active' : '' %>" href="/admin/users">Users
                                    </a>
                                    <a class="<%= path === '/admin/request' ? 'active' : '' %>" href="/admin/request"> Requests     
                                        </a>
                                    <a class="<%= path === '/admin/log' ? 'active' : '' %>" href="/admin/log">log
                                        </a>
                                    <%}%>

                            </div>
                        </div>
                    </li>
                    <%}%>

                        <% } %>
        </ul>
        <ul class="main-header__item-list">
            <% if (!isAuthenticated) { %>
                <li class="main-header__item">
                    <a class="<%= path === '/login' ? 'active' : '' %>" href="/login">Login</a>
                </li>
                <li class="main-header__item">
                    <a class="<%= path === '/signup' ? 'active' : '' %>" href="/signup">Signup</a>
                </li>
                <% } else { %>
                    <li class="main-header__item">
                        <form action="/logout" method="post">
                            <input type="hidden" name="_csrf" value="<%= csrfToken%>">
                            <button type="submit">Logout</button>
                        </form>
                    </li>
                    <% } %>
        </ul>
    </nav>
</header>

